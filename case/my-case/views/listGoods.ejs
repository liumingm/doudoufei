<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/listGoods.css' />
  </head>
  <body>
    <div id="tabber-main">
      <!-- 商品列表 -->
      <div id="shop-list">
        <!-- 头部 -->
        <div id="shop-header">
        <h1>ECSHOP管理中心</h1>
        <span class="action-span1">-商品列表</span>
        <i><img src="images/jnsy.png"></i>
          <span class="action-span">
            <a href="addGoods" target="content">添加新商品</a>
          </span>
        </div>
      <!-- 搜索 -->
        <div class="form-div">
          <form>
            <img src="images/icon_search.gif" width="26" height="22">
            <select name="cat_id" style="width: 158px">
              <option value="0">所有分类</option>
            </select>
            <select name="brand_id" style="width: 105px">
              <option value="0">所有品牌</option>
            </select>
            <select name="intro_type" style="width: 72px">
              <option value="0">全部</option>
            </select>
            <select name="is_on_sale" style="width: 58px">
              <option value="0">全部</option>
            </select>
            <span>关键字</span>
            <input type="text" name="keyword" size="15">
            <input type="submit" value="搜索" class="button">
          </form>
        </div>

        <div class="list-div">
          <table cellpadding="3" cellspacing="1">
            <tbody>
              <tr>
                <th>
                  <input type="checkbox" name="">
                  <a href="">编号</a>
                  <img src="images/sort_desc.gif" style="display:inline-block">
                </th>
                <th>
                  <a href="">商品名称</a>
                </th>
                <th>
                  <a href="">货号</a>
                </th>
                <th>
                  <a href="">价格</a>
                </th>
                <th>
                  <a href="">上架</a>
                </th>
                <th>
                  <a href="">精品</a>
                </th>
                <th>
                  <a href="">新品</a>
                </th>
                <th>
                  <a href="">热销</a>
                </th>
                <th>
                  <a href="">推荐排序</a>
                </th>
                <th>
                  <a href="">库存</a>
                </th>
                <th>
                  <a href="">虚拟销量</a>
                </th>
                <th>
                  <a href="">操作</a>
                </th>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
  </body>
</html>
